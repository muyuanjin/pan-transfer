{
  "manifest_version": 3,
  "name": "Chaospace Baidu Transfer",
  "description": "Collect CHAOSPACE resources and save them to Baidu Netdisk.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CHAOSPACE 转存助手"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "cookies",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://chaospace.cc/*",
    "*://*.chaospace.cc/*",
    "*://chaospace.xyz/*",
    "*://*.chaospace.xyz/*",
    "https://pan.baidu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chaospace.cc/*",
        "*://*.chaospace.cc/*",
        "*://chaospace.xyz/*",
        "*://*.chaospace.xyz/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["floatingButton.css"],
      "matches": [
        "*://chaospace.cc/*",
        "*://*.chaospace.cc/*",
        "*://chaospace.xyz/*",
        "*://*.chaospace.xyz/*"
      ]
    }
  ]
}
